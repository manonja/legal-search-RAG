# Required Configuration
# ------------------
# Google API key for Gemini model access
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API key for embeddings
OPENAI_API_KEY=your_openai_api_key_here

# Tenant Configuration
# ------------------
# Unique identifier for this tenant/instance
TENANT_ID=default
# Tenant-specific collection name in ChromaDB
COLLECTION_NAME=legal_docs

# Document Storage Configuration
DOCS_ROOT=~/Downloads/processedLegalDocs

# Optional Configuration
# ------------------
# Directory paths (defaults will be used if not set)
INPUT_DIR=~/Downloads/legaldocs
OUTPUT_DIR=~/Downloads/processedLegalDocs
CHUNKS_DIR=~/Downloads/chunkedLegalDocs

# Cost Control Settings
OPENAI_MONTHLY_BUDGET=30
MAX_QUERIES_PER_MONTH=100
DEFAULT_MODEL=gpt-3.5-turbo
ENABLE_COST_WARNINGS=true

# Admin Settings
ADMIN_API_KEY=your_admin_api_key_here

# Application Settings
LOG_LEVEL=INFO

# Service Ports
# ------------------
API_PORT=8000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# Cloud Deployment Settings
# ------------------
# Uncomment and configure for cloud deployment
# USE_S3_STORAGE=true
# S3_BUCKET_NAME=your-legal-docs-bucket
# S3_PREFIX=legal-search-data
# AWS_REGION=us-west-2
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
